@model IEnumerable<Hospital.Core.Patients.Models.PatientDto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="container">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div id="quick-access">
        @using (Ajax.BeginForm("Search", "Patients", new { }, new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "get", UpdateTargetId = "patients" }, new { @class = "form-inline quick-search-form" }))
        {
            <div class="form-group">
                @Html.TextBox("pattern", null, new { @class = "form-control", placeholder = "Search here" })
            </div>
            <button type="submit" id="quick-search" class="btn btn-custom"><span class="glyphicon glyphicon-search custom-glyph-color"></span></button>
        }
    </div>

    <div id="patients">
        @{
            Html.RenderPartial("_PatientsPartial", Model);
        }
    </div>
</div>