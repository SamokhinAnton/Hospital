@model IEnumerable<Hospital.Core.Doctors.Models.DoctorDto>

@{
    ViewBag.Title = "AddDoctor";
}

<h2>AddDoctor</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Specialization)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Specialization)
        </td>
        <td>
            @Html.ActionLink("Add", "AddToPatient", new { doctorId = item.Id, patientId = Url.RequestContext.RouteData.Values["id"] })
        </td>
    </tr>
}

</table>
